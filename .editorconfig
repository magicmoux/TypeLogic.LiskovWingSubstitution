root = true

[*.{cs,csproj,sln}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4

# C# specific rules
[*.cs]
# Use expression-bodied members where concise is beneficial
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion

# Prefer explicit type for built-in types (int, string, etc.)
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_elsewhere = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion

# Qualify field access with 'this.'? Project uses underscore-prefixed private fields, so do not force 'this.'
dotnet_style_qualification_for_field = false:silent
dotnet_style_qualification_for_property = false:silent
dotnet_style_qualification_for_method = false:silent

# Naming conventions
dotnet_naming_rule.private_fields_should_start_with_underscore.severity = suggestion
dotnet_naming_rule.private_fields_should_start_with_underscore.symbols = private_fields
dotnet_naming_rule.private_fields_should_start_with_underscore.style = underscore_prefix_style

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.required_modifiers = readonly

dotnet_naming_style.underscore_prefix_style.required_prefix = _
dotnet_naming_style.underscore_prefix_style.capitalization = camel_case

# File header: require XML documentation for public members when generating docs
dotnet_diagnostic.CS1591.severity = none

# Formatting rules
csharp_preserve_single_line_blocks = true
